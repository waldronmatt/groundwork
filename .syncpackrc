{
  "formatRepository": true,
  "lintFormatting": false,
  "source": [
    "package.json",
    "apps/*/package.json",
    "configs/*/package.json",
    "docs/*/package.json",
    "packages/*/package.json"
  ],
  "semverGroups": [
    {
      "label": "Every dependency should have a semver range of fixed version numbers",
      "range": "",
      "dependencyTypes": [
        "prod",
        "resolutions",
        "overrides",
        "pnpmOverrides",
        "local"
      ],
      "dependencies": [
        "**"
      ],
      "packages": [
        "**"
      ]
    }
  ],
  "versionGroups": [
    {
      "label": "Use workspace protocol when developing local packages",
      "dependencies": [
        "$LOCAL"
      ],
      "dependencyTypes": [
        "prod",
        "dev",
        "peer"
      ],
      "pinVersion": "workspace:*"
    }
  ]
}
