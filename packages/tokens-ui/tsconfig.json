{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig-config/vite.json",
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "coverage"],
  "compilerOptions": {
    "paths": {
      "@localTypes/*": ["lib/types/*"]
    },
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true
  }
}
