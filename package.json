{
  "name": "groundwork",
  "description": "A monorepo boilerplate using pnpm, nx, and lerna-lite.",
  "version": "0.0.1",
  "private": true,
  "author": "Matthew Waldron",
  "workspaces": [
    "apps/*",
    "configs/**",
    "docs/**",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "init:husky": "pnpm exec husky init",
    "commit": "git-cz",
    "delete": "rimraf pnpm-lock.yaml .nx node_modules",
    "lint:secrets": "npx secretlint **/*",
    "lint:format": "prettier --write .",
    "lint:deps": "npx syncpack lint --config .syncpackrc",
    "lint:publish": "npx publint",
    "lint:packages": "npx manypkg check",
    "lint:mr": "run-p lint:secrets lint:format lint:deps lint:publish lint:packages",
    "nx:graph": "npx nx graph",
    "list:deps": "npx syncpack list",
    "list:packages": "lerna ls -l -all",
    "preview:version": "lerna version --dry-run",
    "preview:publish": "lerna publish from-package --dry-run",
    "version": "lerna version",
    "publish": "lerna publish from-package",
    "dev": "npx nx run-many -t dev",
    "lint": "npx nx run-many -t lint",
    "test": "npx nx run-many -t test",
    "test:watch": "npx nx run-many -t test:watch",
    "clean": "npx nx run-many -t clean",
    "build": "npx nx run-many -t build",
    "preview": "npx nx run-many -t preview",
    "bootstrap:ci": "pnpm i --frozen-lockfile",
    "version:ci": "lerna version --yes",
    "publish:ci": "lerna publish from-package --yes"
  },
  "license": "MIT",
  "dependencies": {
    "@commitlint/cli": "18.5.0",
    "@commitlint/config-conventional": "18.5.0",
    "@lerna-lite/cli": "3.2.1",
    "@lerna-lite/list": "3.2.1",
    "@lerna-lite/publish": "3.2.1",
    "@lerna-lite/version": "3.2.1",
    "@manypkg/cli": "0.21.2",
    "@nrwl/cli": "15.9.3",
    "@nrwl/nx-cloud": "16.5.2",
    "@secretlint/secretlint-rule-preset-recommend": "8.1.0",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.0.7",
    "lint-staged": "15.2.0",
    "npm-run-all2": "5.0.0",
    "nx": "17.2.8",
    "prettier": "3.2.4",
    "publint": "0.2.7",
    "secretlint": "8.1.0",
    "syncpack": "12.3.0"
  },
  "resolutions": {
    "tsconfig-paths": "4.2.0"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
